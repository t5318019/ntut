html
    head
        meta(charset="utf-8")
        meta(http-equiv="x-ua-compatible", content="ie=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title 北科大小工具
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/foundation/6.2.3/foundation.min.css")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/foundation-icons/3.0/foundation-icons.min.css")
    body
        div(class="top-bar hide-for-print")
            div(class="row")
                div(class="top-bar-left")
                    ul(class="dropdown menu", data-dropdown-menu)
                        li(class="menu-text") <i class="fi-wrench"></i>&nbsp;北科大小工具
        div(class="callout primary hide-for-print")
            div(class="row column text-center")
                h1 國立臺北科技大學<br>新生國文會考歷年試題
            div(class="row column")
                ul
                    li 
                        |會考內容以
                        a(href="http://gec.ntut.edu.tw/files/11-1017-9307.php") 「書香計畫」
                        |推薦之書籍為為範圍，試題以改錯、填空、重組等非選題為主。
                    li 資料來源：
                        a(href="http://gec.ntut.edu.tw") 國立臺北科技大學 通識教育中心
                    li 本網頁經過編排設定，每學期試題將分為兩頁輸出，歡迎列印使用。

- var exams = [C10402, C10401, C10302, C10301, C10202, C10201, C10102, C10101, C10002, C10001, C9902, C9901, C9802, C9801, C9702, C9701, C9602, C9601, C9502, C9501, C9402, C9401, C9302];
        each exam in exams
            div(class="row", style="page-break-after: always;")
                div(class="column")
                    h1= exam.info[0] + "學年度第" + exam.info[1] + "學期國文會考"
                    h2 第壹題、以下每小題都有一個錯別字，請改寫為正確的字形。（每字二分，共三十分）
                    table
                        tr
                            each val, index in exam.A
                                td= index+1
                        tr
                            each val, index in exam.A
                                td= val
                    ol
                        each val, index in exam.B
                            li= val
                    h2 第貳題、請將下列各題成語（   ）內缺空的字，按號碼順序填入答案欄。（每字二分，共三十分）
                    table
                        tr
                            each val, index in exam.C
                                td= index+16
                        tr
                            each val, index in exam.C
                                td= val
                    ul
                        each val, index in exam.D
                            li= val
            div(class="row", style="page-break-after: always;")
                div(class="column")
                    if exam.G
                        h2 第參題、請按（  ）內的字音寫出正確的字形。（每字二分，共三十分）
                    else
                        h2 第參題、請按（  ）內的字音寫出正確的字形。（每字二分，共四十分）
                    table
                        tr
                            each val, index in exam.E
                                td= index+31
                        tr
                            each val, index in exam.E
                                td= val
                    ol(start="31")
                        each val, index in exam.F
                            li= val
                    if exam.G
                        h2 第肆題、填空。（每字二分，共十分）
                        table
                            tr
                                each val, index in exam.G
                                    td= index+46
                            tr
                                each val, index in exam.G
                                    td= val
                        ul(start="46")
                            each val, index in exam.H
                                li= val
